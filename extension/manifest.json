{
    "name": "Netflix With Friends!",
    "version": "1.0",
    "description": "Watch Netflix togethers",
	"permissions": [
		"activeTab",
		"storage",
		"declarativeContent"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
		  "matches": ["https://www.netflix.com/*", "https://www.youtube.com/watch?v=*"],
		  "run_at": "document_idle",
		  "js": ["socket.io.js", "chat.js", "app.js", "connect.js", "listener.js"]
		}
	],
	"page_action": {
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
        "chat.html"
    ],
	"manifest_version": 2
}
